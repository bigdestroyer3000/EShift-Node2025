<style>

    .comment-form-container  {
        box-sizing: border-box;
    }

    .comment-form-container  {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
        color: #333;
        margin: 0;
        padding: 2rem;
    }

    .comment-form-container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, .1);
    }

    .comment-form-container .input-group, .comment-form-container .textarea-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 1.5em;
    }

    .comment-form-container label {
        font-weight: bold;
        margin-bottom: 0.5em;
    }

    .comment-form-container input[type=text], .comment-form-container input[type=email], .comment-form-container textarea {
        width: 100%;
        padding: 0.7em;
        border: 1px solid #ccc;
        border-radius: 4px;
        transition: all 0.3s ease-in-out;
    }

    .comment-form-container input[type=text]:focus, .comment-form-container input[type=email]:focus, .comment-form-container textarea:focus {
        outline: none;
        border-color: #aee7ff;
        box-shadow: inset 0 0 3px rgba(0, 140, 255, 0.2);
    }

    .comment-form-container textarea {
        resize: vertical;
    }

    .comment-form-container button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 0.7em 1.5em;
        cursor: pointer;
        border-radius: 4px;
        transition: transform 0.2s ease-in-out;
    }

    .comment-form-container button:hover {
        transform: scale(1.05);
    }

    .comments-list {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    .comments-list {
        font-family: 'Roboto', sans-serif;
        line-height: 1.6;
        background-color: #fafafa;
        color: #333;
    }

    .comments-list .comments-section {
        text-align: center;
        padding: 20px;
    }

    .comments-list h1 {
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .comments-list {
        list-style-type: none;
        padding-left: 0;
        max-width: 600px;
        margin: 0 auto;
    }

    .comments-list .comment-item {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        padding: 10px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .comments-list .comment-icon {
        font-size: 2rem;
        color: #3498db;
        margin-right: 10px;
    }

    .comments-list .author-name {
        font-weight: bold;
        font-size: 1.1rem;
        margin-right: 10px;
    }

    .comments-list .comment-text {
        flex-grow: 1;
        word-wrap: break-word;
    }
</style>
