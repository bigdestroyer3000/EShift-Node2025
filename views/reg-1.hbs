<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="container text-center w-50 p-5 rounded shadow-lg bg-dark opacity-75">
        <h1>Форма регистрации</h1>

        {{!-- Handlebars шаблон формы --}}
        <form action="/register" method="post">
            <div class="mb-3">
                <label for="nameInput" class="form-label">Имя:</label>
                <input type="text" id="nameInput" name="name" placeholder="Ваше имя" required class="form-control form-control-lg"/>
            </div>
            <div class="mb-3">
                <label for="loginInput" class="form-label">Логин:</label>
                <input type="text" id="loginInput" name="login" placeholder="Ваш логин" required class="form-control form-control-lg"/>
            </div>
            <div class="mb-3">
                <label for="passwordInput" class="form-label">Пароль:</label>
                <input type="password" id="passwordInput" name="password" placeholder="Ваш пароль" required class="form-control form-control-lg"/>
            </div>
            <button type="submit" class="btn btn-success btn-block mt-3">Зарегистрироваться</button>
        </form>
    </div>
    <!-- Подключаем Bootstrap JS и Popper.js -->
    <!--script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script-->
</div>
<style> body { background-color: #7faf7a; /* Оливковый фон */ color: white; } .form-control:focus { box-shadow: none !important; border-color: rgba(255, 255, 255, 0.5); } button[type='submit'] { background-color: #5cb85c; border-color: transparent; } h1 { font-size: 2rem; margin-bottom: 2rem; } </style>